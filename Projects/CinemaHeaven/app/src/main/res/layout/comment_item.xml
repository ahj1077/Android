<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_userImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user1"
        android:layout_margin="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFCCCCCC"/>

    <TextView
        android:id="@+id/tv_userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_toRightOf="@id/iv_userImage"/>

    <TextView
        android:id="@+id/tv_postTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10분전"
        android:textSize="12dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_userImage"
        android:layout_below="@+id/tv_userId"/>

    <RatingBar
        android:id="@+id/rbar_userRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.1"
        android:numStars="5"
        android:rating="4.5"
        style="?android:attr/ratingBarStyleSmall"
        android:isIndicator="true"
        android:layout_below="@+id/tv_userId"
        android:layout_toRightOf="@+id/tv_postTime"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:layout_below="@+id/tv_postTime"
        android:layout_toRightOf="@+id/iv_userImage"/>

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천"
        android:textColor="@color/black"
        android:layout_below="@+id/tv_contents"
        android:layout_toRightOf="@+id/iv_userImage"/>

    <TextView
        android:id="@+id/tv_recommendCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/tv_contents"
        android:layout_toRightOf="@+id/tv_recommend"/>

    <TextView
        android:id="@+id/tv_pipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textColor="@color/black"
        android:layout_below="@id/tv_contents"
        android:layout_toRightOf="@id/tv_recommendCnt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고하기"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_contents"
        android:layout_toRightOf="@id/tv_pipe"/>

</RelativeLayout>